{
  "name": "docbase-search",
  "version": "0.1.0",
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "license": "MIT",
  "author": "mryhryki",
  "private": true,
  "description": "DocBase の投稿を収集し、検索用の画面を提供するプロジェクト",
  "scripts": {
    "deploy": "npm exec serverless deploy --stage=${SERVERLESS_STAGE:-dev}",
    "deploy:collect": "npm exec serverless deploy function --function collect --stage=${SERVERLESS_STAGE:-dev}",
    "deploy:view": "npm exec serverless deploy function --function view --stage=${SERVERLESS_STAGE:-dev}",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mryhryki/docbase-search.git"
  },
  "dependencies": {
    "@types/aws-sdk": "^2.7.0",
    "aws-sdk": "^2.1003.0",
    "serverless-dotenv-plugin": "^3.10.0",
    "serverless-esbuild": "^1.19.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "jest": {
    "testTimeout": 1000,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*.test.ts"
    ]
  }
}
